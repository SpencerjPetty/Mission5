@{
    ViewData["Title"] = "Tutoring Calculator";
}

<div class="background-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Tutoring Cost Calculator</h2>

                        <div class="mb-3">
                            <label for="hours" class="form-label">Enter Hours of Tutoring:</label>
                            <input type="number" id="hours" class="form-control" min="1" required />
                        </div>

                        <div class="mb-3">
                            <label for="rate" class="form-label">Hourly Rate ($):</label>
                            <input type="text" id="rate" class="form-control" value="50" readonly />
                        </div>

                        <div class="d-grid">
                            <button id="calculate" class="btn btn-primary">Calculate</button>
                        </div>

                        <div class="mt-3">
                            <label for="total" class="form-label">Total Cost ($):</label>
                            <input type="text" id="total" class="form-control" readonly />
                        </div>

                        <div class="mt-4 text-center">
                            <a asp-controller="Home" asp-action="Hobby" class="btn btn-secondary">Back to Home Page</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/calculator.js"></script>
